<?xml version='1.0' encoding='utf-8'?>
<widget id="com.scentair.scentselector" version="1.0.0">
    <name>Scentselector</name>
    <description>
        Cordova app that sorts fragrances based on fragrance atrtributes selected.
    </description>
    <author email="steve@ermish.com" href="http://scentair.com">
        ScentAir Technologies
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon density="mdpi" height="57" platform="ios" src="res/icon/ios/scentselector.png" width="57" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
